<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">

	<!-- Servlets -->
	<listener>
		<listener-class>com.webapp.server.DataManagementServiceImpl</listener-class>
	</listener>
	<servlet>
		<servlet-name>DataManagementService</servlet-name>
		<servlet-class>com.webapp.server.DataManagementServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>DataManagementService</servlet-name>
		<url-pattern>/webapplication/DataManagementService</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>MySQLService</servlet-name>
		<servlet-class>com.webapp.server.MySQLServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>MySQLService</servlet-name>
		<url-pattern>/webapplication/MySQLService</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>WebApplication.html</welcome-file>
	</welcome-file-list>

</web-app>
